<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1" android:padding="5dp">
        <TextView
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:text="@string/selectDirLabel"
                android:id="@+id/textView" android:layout_weight="0" android:autoText="false"
                android:gravity="bottom|left"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/editText" android:background="@color/editBackground" android:text="avnav"
                        android:layout_weight="1" android:textSize="20dp"
                        android:layout_marginRight="5dp" android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/btSelectDir" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                        />
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:text="@string/runMode"
                android:id="@+id/textView6"/>
        <RadioGroup android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:baselineAligned="false">
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/runNormal"
                        android:id="@+id/rbRunNormal" android:checked="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/useExtBrowser"
                        android:id="@+id/rbRunExternal" android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:text="@string/runCrosswalk" android:id="@+id/rbModeXwalk"
                             android:layout_marginLeft="10dp"
                             android:textAppearance="?android:attr/textAppearanceMedium" android:checked="false"
                        />
        </RadioGroup>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_weight="0">
                <TextView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/hruler2"
                          android:background="#ffc8c8c8"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:text="@string/features"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_weight="0" android:rowOrderPreserved="false"
                        >
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent" android:layout_marginRight="10dp">
                                <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/enableDemoLabel"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:id="@+id/cbShowDemoCharts"  android:checked="true"

                                        />
                                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="@string/labelIpNmea"
                                          android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/cbIpNmea"
                                          android:checked="false"
                                        />
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:measureWithLargestChild="false"
                                >
                                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="@string/labelInternalGps"
                                          android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/cbInternalGps"
                                          android:checked="true"
                                        />
                                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="@string/labelIpAis" android:textAppearance="?android:attr/textAppearanceMedium"
                                          android:id="@+id/cbIpAis" android:checked="false"
                                        />
                        </LinearLayout>
                </LinearLayout>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:id="@+id/hruler1" android:background="#ffc8c8c8"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/lExternalGps">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" android:text="@string/externalGps"
                          android:id="@+id/textView4" android:layout_weight="1"
                          android:layout_gravity="center_vertical" android:paddingLeft="5dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/iconIp"
                                   android:src="@drawable/redbubble"
                                />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="IP"
                                android:id="@+id/textView2" android:layout_gravity="center_vertical"/>
                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/edIP" android:text="192.168.20.10" android:layout_weight="1"
                                android:background="@color/editBackground" android:layout_marginLeft="8dp"
                                android:layout_gravity="center_vertical"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Port"
                                  android:id="@+id/textView3" android:layout_marginLeft="16dp"
                                  android:layout_gravity="center_vertical"/>
                        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/edPort" android:text="34567"
                                  android:background="@color/editBackground" android:layout_marginLeft="5dp"
                                  android:layout_gravity="center_vertical" android:paddingLeft="4dp"
                                  android:paddingRight="4dp" android:layout_marginRight="4dp"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="0">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iconGps" android:src="@drawable/redbubble"
                        android:layout_gravity="center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/gpsServiceStopped"
                        android:id="@+id/txService" android:layout_gravity="center_vertical" android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal" android:padding="8dp"/>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/startGps"
                        android:id="@+id/btGps"
                        android:layout_marginLeft="5dp"
                        />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/exitText"
                        android:id="@+id/btExit" android:enabled="true"
                        android:layout_weight="1" android:textSize="30dp"
                        />
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/startText"
                    android:id="@+id/btStart" android:enabled="true"
                    android:layout_weight="1" android:textSize="30dp"
                        />
        </LinearLayout>
</LinearLayout>