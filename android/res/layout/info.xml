<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="10dp" android:paddingTop="5dp"
              android:paddingBottom="5dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="0" android:paddingTop="10dp"
            android:paddingBottom="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txAvnav"
                  android:text="AvNav Android version "/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txVersion" android:text="0.0.1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="langer langer text ahahaha"
                android:id="@+id/txXwalk" android:paddingBottom="10dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btXwalDownload"
                android:id="@+id/btDownloadXwalk"/>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/scrollbar_shape_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txInfo"
                style="@style/scrollbar_shape_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:maxLines="100"
                android:text="test" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>